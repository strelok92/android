<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.dialogs.ServerAddDialog">

    <LinearLayout
        style="@style/dialog_frame"
        android:orientation="vertical"
        >

        <!--Title-->
        <TextView
            android:id="@+id/textView"
            style="@style/dialog_title"
            android:text="Add SSH server"/>

<!--        <TextView-->
<!--            android:id="@+id/textView"-->
<!--            style="@style/dialog_title"-->
<!--            android:text="Add SSH server"/>-->

        <!--Enter Addr-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView2"
                style="@style/dialog_text"
                android:layout_weight="2"
                android:text="Remote IP addr:" />


            <EditText
                android:id="@+id/ip_addr"
                style="@style/dialog_entry"
                android:inputType="numberDecimal"
                android:digits="0123456789."
                android:text="192.168.0.1" />

        </LinearLayout>

        <!--Enter Port-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView3"
                style="@style/dialog_text"
                android:layout_weight="2"
                android:text="Remote IP port:" />
            <EditText
                android:id="@+id/ip_port"
                style="@style/dialog_entry"
                android:inputType="number"
                android:maxLength="4"
                android:text="22" />
        </LinearLayout>

        <!--Enter Name-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">
            <TextView
                android:id="@+id/textView4"
                style="@style/dialog_text"
                android:layout_weight="2"
                android:text="Name:" />
            <EditText
                android:id="@+id/server_name"
                style="@style/dialog_entry"
                android:inputType="text"
                android:text="" />
        </LinearLayout>

        <!--Buttons-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="horizontal">

            <Button
                android:id="@+id/bAdd"
                style="@style/dialog_button"
                app:cornerRadius="@dimen/dimCornerMid"
                android:text="Add" />

            <Button
                android:id="@+id/bConnect"
                style="@style/dialog_button"
                app:cornerRadius="@dimen/dimCornerMid"
                android:text="Connect" />
        </LinearLayout>

    </LinearLayout>
</FrameLayout>