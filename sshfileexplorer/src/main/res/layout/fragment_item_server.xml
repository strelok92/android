<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    >

    <LinearLayout
        style="@style/item_server_frame"
        android:orientation="vertical">

        <TextView
            android:id="@+id/tSrvItemTitle"
            style="@style/item_title" />

        <TextView
            android:id="@+id/tSrvItemAddr"
            style="@style/item_text" />

    </LinearLayout>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageButton
            android:id="@+id/bSrvItemDel"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/baseline_delete_forever_32"
            android:layout_gravity="right|center"
            android:layout_margin="10dp"
            android:backgroundTint="@color/colorIconBackground"
            />

    </FrameLayout>

</FrameLayout>
