<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_background</item>
    </style>

    <style name="dialog_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textSize">@dimen/dialog_title</item>
        <item name="android:background">@drawable/dialog_title</item>
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_text">
        <item name="android:textSize">@dimen/dialog_text</item>
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="dialog_button">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:textSize">@dimen/dialog_button</item>
        <item name="android:backgroundTint">@color/dialog_button</item>
    </style>

<!--    OLD -->

    <style name="dialog_entry">
        <item name="android:textSize">@dimen/dialog_text</item>
        <item name="android:textColor">@color/dialog_text</item>
        <item name="android:maxLength">15</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/dialog_entry</item>

        <item name="android:layout_margin">5dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left</item>
    </style>



    <style name="dialog_btn">
        <item name="android:backgroundTint">@color/dialog_fg</item>
    </style>

    <style name="srv_item_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@color/dialog_fg</item>
    </style>

    <style name="srv_item_title">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
<!--        <item name="android:layout_weight">2</item>-->
        <item name="android:layout_marginTop">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">left</item>
        <item name="android:textSize">15dp</item>
        <item name="android:background">@color/dialog_entry</item>
        <item name="android:textColor">@color/dialog_txt</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="srv_item_addr">
        <item name="android:textSize">10dp</item>
        <item name="android:textColor">@color/dialog_txt</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginBottom">1dp</item>
        <item name="android:layout_marginLeft">1dp</item>
        <item name="android:layout_marginRight">1dp</item>
<!--        <item name="android:layout_weight">2</item>-->
        <item name="android:background">@color/dialog_entry</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">left</item>
    </style>
</resources>