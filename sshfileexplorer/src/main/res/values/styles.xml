<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="dialog_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/dialog_frame</item>
    </style>

    <style name="dialog_title" parent="Base.Theme.App">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">5dp</item>
        <item name="android:gravity">top|center</item>
        <item name="android:textSize">@dimen/dimTextBig</item>
        <item name="android:background">@drawable/dialog_title</item>
        <item name="android:textColor">@color/colorText</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="dialog_text" parent="Base.Theme.App">
        <item name="android:textSize">@dimen/dimTextMid</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:padding">2dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="dialog_entry" parent="Base.Theme.App">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">2</item>
        <item name="android:maxLength">15</item>
        <item name="android:ems">10</item>
        <item name="android:background">@drawable/dialog_entry</item>
        <item name="android:textSize">@dimen/dimTextMid</item>
        <item name="android:layout_margin">1dp</item>
        <item name="android:paddingLeft">5dp</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="dialog_entry_err" parent="dialog_entry">
        <item name="android:background">@drawable/dialog_entry_err</item>
    </style>

    <style name="dialog_check" parent="Base.Theme.App">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">@dimen/dimTextBig</item>
        <item name="android:gravity">left</item>
    </style>

    <style name="dialog_button" parent="Base.Theme.App">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:layout_margin">5dp</item>
        <item name="android:textSize">@dimen/dimTextMid</item>
        <item name="android:textColor">@color/colorText</item>
    </style>

    <style name="item_server_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginRight">10dp</item>
        <item name="android:layout_marginTop">5dp</item>
        <item name="android:layout_marginBottom">5dp</item>
        <item name="android:background">@drawable/item_server_frame</item>
    </style>

    <style name="item_title" parent="dialog_title">
        <item name="android:gravity">left</item>
        <item name="android:background"></item>
    </style>

    <style name="item_text" parent="dialog_text">
        <item name="android:gravity">left</item>
        <item name="android:padding">0dp</item>
        <item name="android:layout_marginLeft">10dp</item>
        <item name="android:layout_marginBottom">5dp</item>

    </style>

    <style name="item_file_frame">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_marginLeft">4dp</item>
        <item name="android:layout_marginRight">4dp</item>
    </style>

</resources>